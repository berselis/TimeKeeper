                <img src="~/media/img/store-time-4.png" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title text-center">Playa Nueva Romana</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-grid">
                        <a class="btn btn-outline-dark btn-lg">
                            <i class="bi bi-cursor-fill"></i>
                            <span>CARGAR</span>
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
