                    <h5 class="card-title text-center">La Romana</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-grid">
                        <a href="@Url.Action("PanelCargaLaRomana","CargaHoraria")" class="btn btn-outline-dark btn-lg">
                            <i class="bi bi-cursor-fill"></i>
                            <span>CARGAR</span>
                        </a>
                    </li>
                </ul>

            </div>
        </div>

        <div class="col-3 m-2">
