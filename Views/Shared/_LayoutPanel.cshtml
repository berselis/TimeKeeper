<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TimeKeeper</title>
    <meta name="description" content="Aplicación para hacer calculo de tiempo total de horas trabajadas según rando de tiempo">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/media/icon/clock16x.png" type="image/x-icon">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
    <link href="~/css/spinkit.css" rel="stylesheet" />
    <link href="~/css/please-wait.css" rel="stylesheet" />

</head>
<body>

    <div id="Loader" class="pg-loading-screen pg-loading" style="background-color: rgb(255, 255, 255);">
        <div class="pg-loading-inner">
            <div class="pg-loading-center-outer">
                <div class="pg-loading-center-middle">

                    <div class="pg-loading-html pg-loaded">

                        <div class="sk-flow">
                            <div class="sk-flow-dot"></div>
                            <div class="sk-flow-dot"></div>
                            <div class="sk-flow-dot"></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <header>

        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Panel","Home")">
                    <img src="~/media/icon/clock48x.png"
                         class="me-2"
                         height="20"
                         alt="Clock"
                         loading="lazy" />
                    <small>TimeKeeper</small>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <ul class="navbar-nav flex-row">
                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link " href="#">
                            
                        </a>
                    </li>
                    <li class="nav-item dropdown me-3 me-lg-1">
                        <a class="nav-link dropdown-toggle hidden-arrow d-sm-flex align-items-sm-center justify-content-around" href="#" id="navbarDropdownMenuLink" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                           
                            <img src="~/media/avatar/santa-claus.png" class="rounded-circle" height="44" loading="lazy" />
                            <strong class="d-none d-sm-block ms-1">@User.Identity.Name</strong>
                            <i class="fas fa-chevron-circle-down fa-lg m-2"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="navbarDropdownMenuLink">
                            <li>
                                <a href="@Url.Action("LogOut","Home")" class="dropdown-item">
                                    <i class="bi bi-box-arrow-left"></i>
                                    <span><strong>Salir</strong></span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>



                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"> </li>
                    </ul>

                   
                </div>

                

            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3 mt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <small> &copy; 2022 - By <a href="https://bdevelopment.net" target="_blank" class="text-success">Berselis Mendoza</a></small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
    
        const loader = document.getElementById('Loader');

        document.addEventListener('DOMContentLoaded', () =>{

            $(loader).fadeOut(400, function(){
                $(loader).remove();
            });

        });



    
    </script>
    <script src="~/js/jquery.table2excel.js"></script>
  @*  <script src="~/js/filesaver.js"></script>

    <script src="~/js/tableexport.js"></script>*@

</body>
</html>
