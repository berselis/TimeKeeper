@{
    Layout = "_Layout";
}




<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }

        @@media (max-width: 991.98px) {
            .cascading-right {
                margin-right: 0;
            }
        }
    </style>


    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">


                <div class="card cascading-right" style="background: hsla(0, 0%, 100%, 0.55);backdrop-filter: blur(30px);">
                    @if(ViewBag.Msj == "invalid")
                    {
                        <div class="alert alert-danger position-absolute w-100" role="alert">
                            <strong>Usuario o clave incorrecto!!!</strong>
                            <button onclick="removeInvalidDialog(this)" type="button" class="btn-close float-end" aria-label="Close"></button>
                        </div>

                    }


                    <div class="card-body p-5 shadow-5 text-center">
                        <h3 class="fw-bold mb-5">Inicio de sección</h3>
                        <form asp-controller="Home" asp-action="LogIn" method="post" enctype="multipart/form-data">
                            <div class="form-outline mb-4">
                                <input autocomplete="off" type="text" id="usuario" name="UserName" class="form-control form-control-lg" required />
                                <label class="form-label" for="usuario">
                                    <i class="bi bi-person-fill"></i>
                                    <span>Nombre de usuario</span>
                                </label>
                            </div>

                            <div class="form-outline mb-4">
                                <input autocomplete="off" type="password" id="password" name="password" class="form-control form-control-lg" required />
                                <label class="form-label" for="password">
                                    <i class="bi bi-key-fill"></i>
                                    <span>Password</span>
                                </label>
                            </div>

                            <div class="input-group-lg">
                                <button type="submit" class="btn btn-success mb-lg-2">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span>ENTRAR</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="~/media/bg/FlHdnPO6dlw.jpg" class="w-100 rounded-4 shadow-4" alt="" />
            </div>
        </div>
    </div>

</section>



<script type="text/javascript">

    function removeInvalidDialog(btn){
        const dialog = btn.parentElement;

        $(dialog).hide(300, function(){
            dialog.remove();
        })
    }




</script>

